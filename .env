# Laila Backend .env file
# IMPORTANT: This file contains sensitive information. Never commit it to version control.

# Django settings
DEBUG=True
SECRET_KEY=your_very_long_and_very_random_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database settings
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_very_strong_database_password
DB_HOST=localhost
DB_PORT=5432

# CORS settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password_or_app_password

# AWS S3 settings (if you're using S3 for static and media files)
USE_S3=True
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_STORAGE_BUCKET_NAME=your-bucket-name

# Sentry settings (for error tracking)
SENTRY_DSN=https://your_sentry_dsn_here

# Redis settings (if you're using Redis for caching)
REDIS_URL=redis://your_redis_host:6379/0

# Celery settings (if you're using Celery for background tasks)
CELERY_BROKER_URL=redis://your_redis_host:6379/1

# Payment gateway settings (e.g., Stripe)
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Other third-party service API keys
GOOGLE_MAPS_API_KEY=your_google_maps_api_key